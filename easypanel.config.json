{
  "name": "konipai-crm-frontend",
  "image": {
    "type": "dockerfile",
    "path": "Dockerfile"
  },
  "ports": [
    {
      "protocol": "http",
      "port": 80,
      "public": true
    }
  ],
  "resources": {
    "cpu": 0.5,
    "memory": 512
  },
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://api.konipai.in/api",
    "VITE_EMAIL_API_URL": "https://api.konipai.in/email-api",
    "VITE_WHATSAPP_API_URL": "https://backend-whatsappapi.7za6uc.easypanel.host",
    "VITE_POCKETBASE_URL": "https://backend-pocketbase.7za6uc.easypanel.host/",
    "VITE_SITE_TITLE": "Konipai CRM",
    "VITE_SITE_LOGO": "https://konipai.in/assets/logo.png",
    "VITE_RAZORPAY_KEY_ID": "rzp_live_3rZx2njbNwMEE1",
    "VITE_API_TIMEOUT": "30000",
    "VITE_MAX_UPLOAD_SIZE": "5242880"
  },
  "healthCheck": {
    "path": "/",
    "port": 80
  },
  "volumes": [],
  "deploy": {
    "replicas": 1,
    "update_config": {
      "order": "start-first"
    },
    "restart_policy": {
      "condition": "on-failure",
      "max_attempts": 3
    }
  }
} 